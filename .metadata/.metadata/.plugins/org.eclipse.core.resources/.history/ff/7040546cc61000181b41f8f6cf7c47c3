package awt;

import java.awt.*;
import java.awt.event.*;

public class Ablak extends Frame implements WindowListener, ActionListener{

	
	public Ablak() throws HeadlessException {
		setVisible(true);
		setSize(300,200);
		this.addWindowListener(this);
		Button gomb= new Button("Kilépés");
		Panel southPanel=new Panel();
		southPanel.setLayout(new FlowLayout());
		southPanel.add(gomb);
		add(southPanel,BorderLayout.SOUTH);
		
	}

	@Override
	public void windowActivated(WindowEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowClosed(WindowEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowClosing(WindowEvent e) {
		dispose(); //nincs osztálymegszûntetes -destruktor
		
	}

	@Override
	public void windowDeactivated(WindowEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowDeiconified(WindowEvent e) {
		setTitle("tálcán voltam");
		
	}

	@Override
	public void windowIconified(WindowEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void windowOpened(WindowEvent e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}
	

}
